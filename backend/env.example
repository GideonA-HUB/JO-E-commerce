# Django Settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,your-railway-app.railway.app

# Database (Railway will provide this)
DATABASE_URL=postgresql://username:password@host:port/database

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Paystack Payment Settings
PAYSTACK_PUBLIC_KEY=pk_live_your_paystack_public_key_here
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key_here
PAYSTACK_WEBHOOK_SECRET=whsec_your_paystack_webhook_secret_here
PAYMENT_GATEWAY=paystack

# Email Settings (Gmail)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com
ADMIN_EMAIL=your-email@gmail.com

# Site Settings
SITE_NAME=TASTY FINGERS
SITE_URL=https://your-domain.com

# Cloudinary Settings
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
